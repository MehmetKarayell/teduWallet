@model teduWallet.Models.ViewModels.StudentDashboardViewModel
@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container-fluid">
    <!-- Welcome Header -->
    <div class="row mb-5">
        <div class="col-md-8">
            <h1 class="fw-bold display-5 mb-2">Hello, @(Model.FullName)! üëã</h1>
            <p class="text-muted fs-5">Welcome back to your TEDU Wallet. Here's what's happening today.</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-3" style="border-radius: 20px;">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="p-3 rounded-circle bg-primary bg-opacity-10 text-primary me-3">
                            <i class="bi bi-coin fs-4"></i>
                        </div>
                        <h6 class="mb-0 fw-bold text-muted">Current Balance</h6>
                    </div>
                    <div class="d-flex align-items-baseline gap-2">
                        <h2 class="mb-0 fw-bold text-primary">@(Model.Balance.ToString("N0"))</h2>
                        <span class="text-primary fw-medium">TDC</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-4 h-100" style="border-radius: 24px;">
                <div class="card-body p-0">
                    <div class="d-flex align-items-center mb-3">
                        <div class="p-3 rounded-circle bg-success bg-opacity-10 text-success me-3">
                            <i class="bi bi-check2-all fs-4"></i>
                        </div>
                        <h6 class="mb-0 fw-bold text-muted">Tasks Completed</h6>
                    </div>
                    <h2 class="mb-0 fw-bold text-success">@(Model.CompletedTasksCount)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-4 h-100" style="border-radius: 24px;">
                <div class="card-body p-0">
                    <div class="d-flex align-items-center mb-3">
                        <div class="p-3 rounded-circle bg-warning bg-opacity-10 text-warning me-3">
                            <i class="bi bi-gift fs-4"></i>
                        </div>
                        <h6 class="mb-0 fw-bold text-muted">Available Rewards</h6>
                    </div>
                    <h2 class="mb-0 fw-bold text-warning">@(Model.AvailableRewardsCount)</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Leaderboard Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm p-4" style="border-radius: 24px; background: white;">
                <div class="d-flex align-items-center mb-4 border-bottom pb-3">
                    <div class="icon-box bg-warning text-white rounded-circle p-2 me-3 shadow-sm d-flex align-items-center justify-content-center" style="width:50px; height:50px;">
                         <i class="bi bi-trophy-fill fs-5"></i>
                    </div>
                    <div>
                        <h4 class="mb-0 fw-bold">üèÜ Weekly Leaderboard</h4>
                        <p class="text-muted mb-0 small">Top 3 students with the most earnings this week</p>
                    </div>
                </div>
                
                <div class="row g-3">
                   @if(!Model.TopStudents.Any()) {
                       <div class="col-12 text-center py-4">
                           <p class="text-muted fst-italic">No rankings available for this week yet. Start earning!</p>
                       </div>
                   }
                   else {
                       @foreach(var student in Model.TopStudents) {
                           <div class="col-md-4">
                               <div class="card border-0 shadow-sm h-100 p-3 text-center bg-light">
                                   <div class="card-body">
                                       <div class="mb-2">
                                           <i class="bi bi-person-circle fs-1 text-secondary"></i>
                                       </div>
                                       <h5 class="fw-bold text-dark mb-1">@student.FullName</h5>
                                       <div class="badge bg-warning text-dark rounded-pill px-3 py-2 mt-2">
                                           <i class="bi bi-lightning-fill"></i> @(student.WeeklyCoinsEarned?.ToString("N0") ?? "0") TDC
                                       </div>
                                   </div>
                               </div>
                           </div>
                       }
                   }
                </div>
            </div>
        </div>
    </div>

    <!-- Active Tasks -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm p-4" style="border-radius: 24px;">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="fw-bold mb-0">This Week's Campus Tasks</h5>
                    <a asp-action="Tasks" class="btn btn-light btn-sm rounded-pill px-3">View All</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="bg-light">
                            <tr>
                                <th class="border-0 px-4 py-3">Task Name</th>
                                <th class="border-0 py-3">Organizer</th>
                                <th class="border-0 py-3">Reward</th>
                                <th class="border-0 py-3">Deadline</th>
                                <th class="border-0 px-4 py-3 text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.ActiveActivities.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        No active tasks available right now.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var activity in Model.ActiveActivities)
                                {
                                    <tr>
                                        <td class="px-4 fw-bold">@activity.Title</td>
                                        <td>@activity.Admin.Name @activity.Admin.Surname</td>
                                        <td><span class="text-success fw-bold">+@activity.RewardTokenAmount TDC</span></td>
                                        <td class="text-muted">@(activity.Deadline?.ToString("MMM dd, yyyy") ?? "No Deadline")
                                        </td>
                                        <td class="text-end px-4">
                                            <form asp-action="Apply" method="post">
                                                <input type="hidden" name="activityId" value="@activity.ActivityId" />
                                                <button type="submit"
                                                    class="btn btn-primary btn-sm rounded-pill px-4">Apply</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
