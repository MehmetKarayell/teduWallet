@model teduWallet.Models.ViewModels.StudentWalletViewModel
@{
    ViewData["Title"] = "My Wallet";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold">My Wallet</h2>
            <p class="text-muted">Manage your TEDU coins and transaction history.</p>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card border-0 text-white shadow" style="background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%); border-radius: 24px;">
                <div class="card-body p-5">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <i class="bi bi-wallet2 fs-1"></i>
                        <span class="opacity-75">TEDU Student Card</span>
                    </div>
                    <div class="mb-4">
                        <p class="mb-0 opacity-75">Available Balance</p>
                        <h1 class="display-4 fw-bold mb-0">@Model.Balance.ToString("N0") <small class="fs-4">TDC</small></h1>
                    </div>
                    <p class="mb-0 small opacity-75">Card Holder: @User.Identity.Name</p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card border-0 shadow-sm" style="border-radius: 20px; height: 100%;">
                <div class="card-body p-4 d-flex flex-column">
                    <div class="mb-3">
                        <h5 class="fw-bold mb-1">Balance History</h5>
                        <p class="text-muted small mb-0">Wallet balance over time</p>
                    </div>
                    <div class="flex-grow-1" style="min-height: 200px;">
                        <canvas id="balanceChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Transaction History -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm p-4" style="border-radius: 24px;">
                <h5 class="fw-bold mb-4">Transaction History</h5>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="bg-light">
                            <tr>
                                <th class="border-0 px-4 py-3">Date</th>
                                <th class="border-0 py-3">Type</th>
                                <th class="border-0 py-3">Description</th>
                                <th class="border-0 px-4 py-3 text-end">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.TransactionHistory.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-5 text-muted">
                                        No transactions found.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var log in Model.TransactionHistory)
                                {
                                    <tr>
                                        <td class="px-4 text-muted">@(log.Timestamp?.ToString("MMM dd, yyyy HH:mm") ?? "-")</td>
                                        <td>
                                            @if (log.ActionType == "EARN" || log.ActionType == "COMPLETED")
                                            {
                                                <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3">Received</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill px-3">Spent</span>
                                            }
                                        </td>
                                        <td>
                                            @if(log.ActionType == "EARN" || log.ActionType == "COMPLETED") {
                                                <span>Completed task: <strong>@(log.Activity?.Title ?? "Unknown Activity")</strong></span>
                                            } else {
                                                <span>Redeemed reward: <strong>@(log.Reward?.RewardName ?? "Unknown Reward")</strong></span>
                                            }
                                        </td>
                                        <td class="text-end px-4">
                                            @if (log.ActionType == "EARN" || log.ActionType == "COMPLETED")
                                            {
                                                <span class="fw-bold text-success">+@((log.Activity?.RewardTokenAmount ?? 0).ToString("N0")) TDC</span>
                                            }
                                            else
                                            {
                                                <span class="fw-bold text-danger">-@((log.Reward?.Cost ?? 0).ToString("N0")) TDC</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ctx = document.getElementById('balanceChart').getContext('2d');
            
            const chartData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.BalanceHistory));
            
            const labels = chartData.map(item => item.Date || item.date);
            const data = chartData.map(item => item.Balance ?? item.balance);
            
            // Handle empty data case
            if (labels.length === 0) {
                labels.push('No Data');
                data.push(0);
            }
            
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Balance (TDC)',
                        data: data,
                        borderColor: '#a855f7',
                        backgroundColor: 'rgba(168, 85, 247, 0.1)',
                        borderWidth: 3,
                        fill: true,
                        tension: 0.4,
                        pointBackgroundColor: '#a855f7',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 4,
                        pointHoverRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            titleColor: '#fff',
                            bodyColor: '#fff',
                            padding: 12,
                            cornerRadius: 8,
                            displayColors: false,
                            callbacks: {
                                label: function(context) {
                                    return context.parsed.y.toLocaleString() + ' TDC';
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            grid: {
                                display: false
                            },
                            ticks: {
                                color: '#919aa1',
                                font: {
                                    size: 11
                                }
                            }
                        },
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            },
                            ticks: {
                                color: '#919aa1',
                                font: {
                                    size: 11
                                },
                                callback: function(value) {
                                    return value.toLocaleString() + ' TDC';
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}

