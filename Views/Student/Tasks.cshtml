@model teduWallet.Models.ViewModels.StudentTasksViewModel
@{
    ViewData["Title"] = "My Tasks";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold">Available Tasks</h2>
            <p class="text-muted">Complete these tasks to earn more TEDU coins.</p>
        </div>
    </div>

    <div class="row g-4">
        @if (!Model.AvailableActivities.Any())
        {
            <div class="col-12">
                <div class="alert alert-info rounded-4 border-0 shadow-sm p-4">
                    <div class="d-flex align-items-center">
                         <i class="bi bi-info-circle-fill fs-3 me-3"></i>
                         <div>
                             <h5 class="fw-bold mb-1">No tasks available</h5>
                             <p class="mb-0">There are currently no active tasks. Please check back later!</p>
                         </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            @foreach (var activity in Model.AvailableActivities)
            {
                var isApplied = Model.AppliedActivityIds.Contains(activity.ActivityId);
                
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm h-100" style="border-radius: 20px;">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div class="p-3 rounded-circle bg-primary bg-opacity-10 text-primary">
                                    <i class="bi bi-journal-text fs-4"></i>
                                </div>
                                <div class="d-flex flex-column align-items-end gap-1">
                                    @if (isApplied)
                                    {
                                        <span class="badge bg-warning-subtle text-warning border border-warning-subtle px-3 py-2 rounded-pill">Applied</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success-subtle text-success border border-success-subtle px-3 py-2 rounded-pill">Open</span>
                                    }

                                    @if (activity.PriorityLevel.HasValue && activity.PriorityLevel > 0)
                                    {
                                        var p = activity.PriorityLevel.Value;
                                        string pText = p <= 3 ? "Low" : p <= 7 ? "Medium" : "High";
                                        var badgeClass = p <= 3 ? "bg-secondary-subtle text-secondary border-secondary-subtle" :
                                                         p <= 7 ? "bg-warning-subtle text-warning-emphasis border-warning-subtle" :
                                                         "bg-danger-subtle text-danger border-danger-subtle";
                                        
                                        <span class="badge @badgeClass border rounded-pill fw-normal px-2 py-1" style="font-size: 0.75rem;">
                                            @pText
                                        </span>
                                    }
                                </div>
                            </div>
                            <h5 class="fw-bold">@activity.Title</h5>
                            <p class="text-muted small mb-4" style="min-height: 4.5em;">
                                @(activity.Description?.Length > 100 ? activity.Description.Substring(0, 97) + "..." : activity.Description)
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold text-primary">@activity.RewardTokenAmount.ToString("N0") Coins</span>
                                <div>
                                @if(isApplied) 
                                {
                                    <button class="btn btn-secondary btn-sm rounded-pill px-4" disabled>Applied</button>
                                }
                                else 
                                {
                                    <form asp-action="Apply" method="post" class="js-apply-form">
                                        <input type="hidden" name="activityId" value="@activity.ActivityId" />
                                        <button type="submit" class="btn btn-primary btn-sm rounded-pill px-4">Start</button>
                                    </form>
                                }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<!-- Simple Confirmation Modal -->
<div id="confirmModal" style="display:none;">
    <div class="modal-backdrop"></div>
    <div class="modal-content">
        <p style="margin-top:0; font-size:1.1rem; font-weight:600;">Confirmation</p>
        <p>Are you sure you want to apply for this task?</p>
        <div style="margin-top:20px; text-align:right;">
            <button type="button" onclick="closeModal()" class="btn btn-light btn-sm" style="margin-right:10px;">Cancel</button>
            <button type="button" onclick="confirmApply()" class="btn btn-primary btn-sm">Confirm</button>
        </div>
    </div>
</div>

<style>
    #confirmModal .modal-backdrop {
        position: fixed;
        top: 0; left: 0; width: 100%; height: 100%;
        background: rgba(0,0,0,0.4);
        z-index: 1050;
    }
    #confirmModal .modal-content {
        position: fixed;
        top: 50%; left: 50%;
        transform: translate(-50%, -50%);
        background: #fff;
        padding: 25px;
        border-radius: 8px;
        z-index: 1051;
        width: 90%;
        max-width: 400px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
</style>

<script>
    var formToSubmit = null;

    document.addEventListener("DOMContentLoaded", function() {
        var forms = document.querySelectorAll(".js-apply-form");
        for (var i = 0; i < forms.length; i++) {
            forms[i].addEventListener("submit", function(e) {
                e.preventDefault();
                formToSubmit = this;
                document.getElementById("confirmModal").style.display = "block";
            });
        }
    });

    function closeModal() {
        document.getElementById("confirmModal").style.display = "none";
        formToSubmit = null;
    }

    function confirmApply() {
        if (formToSubmit) {
            formToSubmit.submit();
        }
    }
</script>
