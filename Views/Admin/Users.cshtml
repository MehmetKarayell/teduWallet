@using teduWallet.Models
@{
  ViewData["Title"] = "User Management";
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
  var students = ViewBag.Students as List<Student>;
  var studentAdminStatus = ViewBag.StudentAdminStatus as Dictionary<int, bool>;
}

<div class="container-fluid py-4">
  <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
    <div class="card-header bg-dark text-white p-4">
      <h2 class="mb-0"><i class="fas fa-users-cog me-2"></i>User Management</h2>
      <p class="text-white mb-0" style="opacity: 0.8;">Manage student roles and temporary admin privileges.</p>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th class="ps-4">Name</th>
              <th>Username</th>
              <th>Email</th>
              <th class="text-center">Role / Privilege</th>
            </tr>
          </thead>
          <tbody>
            @if (students != null)
            {
              foreach (var student in students)
              {
                bool isTempAdmin = studentAdminStatus != null && studentAdminStatus.ContainsKey(student.StudentId) &&
                studentAdminStatus[student.StudentId];
                <tr>
                  <td class="ps-4">
                    <div class="d-flex align-middle">
                      <div
                        class="avatar me-3 bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                        style="width: 40px; height: 40px; font-weight: bold;">
                        @((student.Name?.Length > 0 ? student.Name[0].ToString() : "?") + (student.Surname?.Length > 0 ?
                            student.Surname[0].ToString() : "?"))
                      </div>
                      <div>
                        <div class="fw-bold">@student.Name @student.Surname</div>
                        <small class="text-muted">ID: #@student.StudentId</small>
                      </div>
                    </div>
                  </td>
                  <td>@student.Username</td>
                  <td>@student.Email</td>
                  <td class="text-center">
                    <form asp-action="ChangeUserRole" method="post"
                      class="role-form d-inline-flex gap-3 bg-light rounded-pill p-1">
                      <input type="hidden" name="userId" value="@student.StudentId" />

                      <div class="form-check form-check-inline m-0">
                        <input class="form-check-input role-radio visually-hidden" type="radio" name="isAdmin"
                          id="admin_@student.StudentId" value="true" @(isTempAdmin ? "checked" : "")>
                        <label
                          class="form-check-label btn btn-sm rounded-pill px-3 @(isTempAdmin ? "btn-danger shadow-sm" : "btn-outline-secondary")"
                          for="admin_@student.StudentId">
                          Admin
                        </label>
                      </div>

                      <div class="form-check form-check-inline m-0">
                        <input class="form-check-input role-radio visually-hidden" type="radio" name="isAdmin"
                          id="student_@student.StudentId" value="false" @(isTempAdmin ? "" : "checked")>
                        <label
                          class="form-check-label btn btn-sm rounded-pill px-3 @(isTempAdmin ? "btn-outline-secondary" : "btn-primary shadow-sm")"
                          for="student_@student.StudentId">
                          Student
                        </label>
                      </div>
                    </form>
                  </td>
                </tr>
              }
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<style>
  /* Removed body style conflict */

  .card {
    transition: transform 0.2s;
  }

  .table thead th {
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.8rem;
    letter-spacing: 0.5px;
    color: #6c757d;
    border-bottom: 2px solid #dee2e6;
  }

  .btn-sm {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .role-form {
    border: 1px solid #e9ecef;
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const radios = document.querySelectorAll('.role-radio');
    radios.forEach(radio => {
      radio.addEventListener('change', function () {
        // Visual feedback
        const form = this.closest('form');
        form.style.opacity = '0.5';
        form.style.pointerEvents = 'none';

        // Auto post
        form.submit();
      });
    });
  });
</script>
