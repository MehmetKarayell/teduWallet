@{
    ViewData["Title"] = "User Management";
    Layout = "_AdminLayout";
}

<div class="row mb-4">
    <div class="col">
        <h2 class="fw-bold"><i class="bi bi-people-fill me-2"></i>User Management</h2>
        <p class="text-muted">Overview of all registered Admins and Students.</p>
    </div>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-dark text-white py-3">
        <h5 class="mb-0">Administrators</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Position</th>
                        <th class="text-end pe-4">Role</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var admin in ViewBag.Admins)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold">@admin.Name @admin.Surname</span>
                            </td>
                            <td>@admin.Username</td>
                            <td>@admin.Email</td>
                            <td>@admin.Position</td>
                            <td class="text-end pe-4">
                                <span class="badge bg-danger">Admin</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-primary text-white py-3">
        <h5 class="mb-0">Students</h5>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Name</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>Coins</th>
                        <th class="text-end pe-4">Role</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in ViewBag.Students)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="fw-bold">@student.Name @student.Surname</span>
                            </td>
                            <td>@student.Username</td>
                            <td>@student.Email</td>
                            <td>@student.Departmant</td>
                            <td><span class="badge bg-warning text-dark">@student.Coins</span></td>
                            <td class="text-end pe-4">
                                <span class="badge bg-primary">Student</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
