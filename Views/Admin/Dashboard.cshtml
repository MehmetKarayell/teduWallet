@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <!-- Welcome Header -->
    <div class="row mb-5">
        <div class="col-md-8">
            <h1 class="fw-bold display-5 mb-2">Admin Dashboard üõ°Ô∏è</h1>
            <p class="text-muted fs-5">Welcome back, @(User.Identity?.Name ?? "Admin"). Here's a quick overview of the
                system.</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3" style="border-radius: 20px;">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="p-3 rounded-circle bg-primary bg-opacity-10 text-primary me-3">
                            <i class="bi bi-people fs-4"></i>
                        </div>
                        <h6 class="mb-0 fw-bold">Total Students</h6>
                    </div>
                    <div class="d-flex align-items-end justify-content-between">
                        <h2 class="mb-0 fw-bold">@(ViewBag.TotalStudentsCount ?? 0)</h2>
                        <span class="text-success small fw-bold"><i class="bi bi-arrow-up"></i> Live</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3" style="border-radius: 20px;">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="p-3 rounded-circle bg-warning bg-opacity-10 text-warning me-3">
                            <i class="bi bi-activity fs-4"></i>
                        </div>
                        <h6 class="mb-0 fw-bold">Active Activities</h6>
                    </div>
                    <div class="d-flex align-items-end justify-content-between">
                        <h2 class="mb-0 fw-bold">@(ViewBag.ActiveActivitiesCount ?? 0)</h2>
                        <span class="text-muted small">Current</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3" style="border-radius: 20px;">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="p-3 rounded-circle bg-success bg-opacity-10 text-success me-3">
                            <i class="bi bi-check2-all fs-4"></i>
                        </div>
                        <h6 class="mb-0 fw-bold">Pending Approvals</h6>
                    </div>
                    <div class="d-flex align-items-end justify-content-between">
                        <h2 class="mb-0 fw-bold">@(ViewBag.PendingCount ?? 0)</h2>
                        <a asp-action="PendingApprovals" class="text-primary small text-decoration-none fw-bold">View
                            All</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3" style="border-radius: 20px;">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="p-3 rounded-circle bg-info bg-opacity-10 text-info me-3">
                            <i class="bi bi-gear-fill fs-4"></i>
                        </div>
                        <h6 class="mb-0 fw-bold">System Status</h6>
                    </div>
                    <div class="d-flex align-items-end justify-content-between">
                        <h2 class="mb-0 fw-bold text-success fs-4">Operational</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm p-4 h-100" style="border-radius: 24px;">
                <h5 class="fw-bold mb-4">Quick Governance</h5>
                <div class="d-grid gap-3">
                    <a asp-action="Users"
                        class="btn btn-outline-dark rounded-pill py-3 text-start px-4 d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-shield-check me-2"></i> Manage Permissions</span>
                        <i class="bi bi-chevron-right small"></i>
                    </a>
                    <a asp-controller="Activity" asp-action="AddActivity"
                        class="btn btn-warning rounded-pill py-3 text-start px-4 d-flex justify-content-between align-items-center fw-bold">
                        <span><i class="bi bi-plus-circle me-2"></i> Create New Activity</span>
                        <i class="bi bi-chevron-right small"></i>
                    </a>
                    <a asp-controller="Activity" asp-action="ManageActivities"
                        class="btn btn-outline-dark rounded-pill py-3 text-start px-4 d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-list-check me-2"></i> Manage Activities</span>
                        <i class="bi bi-chevron-right small"></i>
                    </a>
                    <a asp-controller="Reward" asp-action="AddReward"
                        class="btn btn-primary rounded-pill py-3 text-start px-4 d-flex justify-content-between align-items-center fw-bold">
                        <span><i class="bi bi-gift-fill me-2"></i> Create New Reward</span>
                        <i class="bi bi-chevron-right small"></i>
                    </a>
                    <a asp-controller="Reward" asp-action="ManageRewards"
                        class="btn btn-outline-dark rounded-pill py-3 text-start px-4 d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-gift me-2"></i> Manage Rewards</span>
                        <i class="bi bi-chevron-right small"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm p-4 h-100" style="border-radius: 24px;">
                <h5 class="fw-bold mb-4">System Notifications</h5>
                
                <!-- Filters -->
                <div class="mb-3 d-flex gap-2">
                    <button class="btn btn-sm btn-dark rounded-pill" onclick="filterLogs('all')">All</button>
                    <button class="btn btn-sm btn-outline-dark rounded-pill" onclick="filterLogs('APPLY')">Applications</button>
                    <button class="btn btn-sm btn-outline-dark rounded-pill" onclick="filterLogs('COMPLETED')">Completions</button>
                    <button class="btn btn-sm btn-outline-dark rounded-pill" onclick="filterLogs('REWARD_SPENT')">Spending</button>
                </div>

                <div class="list-group list-group-flush" style="max-height: 400px; overflow-y: auto;">
                    @if (ViewBag.Logs != null)
                    {
                        @foreach (var log in (List<teduWallet.Models.Log>)ViewBag.Logs)
                        {
                            <div class="list-group-item px-0 border-0 mb-3 log-item" data-category="@log.ActionType">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1 fw-bold @(log.ActionType == "APPLY" ? "text-primary" : log.ActionType == "COMPLETED" || log.ActionType == "EARN" ? "text-success" : "text-warning")">
                                        @if(log.ActionType == "APPLY") { <text>New Application</text> }
                                        else if(log.ActionType == "COMPLETED" || log.ActionType == "EARN") { <text>Task Completed</text> }
                                        else if(log.ActionType == "REWARD_SPENT" || log.ActionType == "SPEND") { <text>Reward Redeemed</text> }
                                        else { @log.ActionType }
                                    </h6>
                                    <small class="text-muted">@log.Timestamp?.ToString("MMM dd, HH:mm")</small>
                                </div>
                                <p class="mb-1 text-muted small">
                                    @if(log.ActionType == "APPLY" && log.Student != null && log.Activity != null)
                                    {
                                        <text>@log.Student.Name has applied for "@log.Activity.Title".</text>
                                    }
                                    else if((log.ActionType == "COMPLETED" || log.ActionType == "EARN") && log.Student != null && log.Activity != null)
                                    {
                                        <text>@log.Student.Name completed "@log.Activity.Title".</text>
                                    }
                                    else if((log.ActionType == "REWARD_SPENT" || log.ActionType == "SPEND") && log.Student != null && log.Reward != null)
                                    {
                                        <text>@log.Student.Name redeemed "@log.Reward.RewardName".</text>
                                    }
                                    else
                                    {
                                        <text>Action by student ID: @log.StudentId</text>
                                    }
                                </p>
                            </div>
                        }
                    }
                    else
                    {
                         <div class="text-muted text-center py-3">No notifications found.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function filterLogs(category) {
        const items = document.querySelectorAll('.log-item');
        items.forEach(item => {
            if (category === 'all' || item.getAttribute('data-category') === category || 
               (category === 'COMPLETED' && item.getAttribute('data-category') === 'EARN') || // Handle legacy or mapped types
               (category === 'REWARD_SPENT' && item.getAttribute('data-category') === 'SPEND')) {
                item.style.display = 'block';
            } else {
                item.style.display = 'none';
            }
        });
        
        // Update button styles (optional but nice)
        document.querySelectorAll('button[onclick^="filterLogs"]').forEach(btn => {
            if(btn.getAttribute('onclick').includes(category)) {
                btn.classList.remove('btn-outline-dark');
                btn.classList.add('btn-dark');
            } else {
                btn.classList.add('btn-outline-dark');
                btn.classList.remove('btn-dark');
            }
        });
    }
</script>
