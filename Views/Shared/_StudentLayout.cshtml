@using teduWallet.Services
@inject IWalletService WalletService
@inject IActivityService ActivityService
@{
    var userIdString = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    decimal currentBalance = 0;
    if (int.TryParse(userIdString, out int studentId))
    {
        currentBalance = WalletService.GetBalance(studentId).Result;
    }
    var fullName = User.FindFirst("FullName")?.Value ?? User.Identity?.Name ?? "Student";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TEDU Wallet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --sidebar-width: 280px;
            --sidebar-bg: rgba(15, 23, 42, 0.95);
            --primary-gradient: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
            --glass-bg: rgba(255, 255, 255, 0.7);
            --glass-border: rgba(255, 255, 255, 0.3);
        }

        body {
            font-family: 'Outfit', sans-serif;
            background: #f8fafc;
            overflow-x: hidden;
            min-height: 100vh;
        }

        #wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
        }

        /* Sidebar Styles */
        #sidebar {
            min-width: var(--sidebar-width);
            max-width: var(--sidebar-width);
            background: var(--sidebar-bg);
            color: #fff;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            z-index: 1000;
            backdrop-filter: blur(10px);
            display: flex;
            flex-direction: column;
            position: fixed;
            height: 100vh;
        }

        #sidebar.active {
            margin-left: calc(-1 * var(--sidebar-width));
        }

        .sidebar-header {
            padding: 2rem 1.5rem;
            background: rgba(0, 0, 0, 0.1);
        }

        .sidebar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            letter-spacing: -0.5px;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .sidebar-nav {
            padding: 1rem 0;
            flex-grow: 1;
        }

        .nav-section-title {
            padding: 0.5rem 1.5rem;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: rgba(255, 255, 255, 0.4);
            font-weight: 600;
        }

        .sidebar-nav a {
            padding: 0.8rem 1.5rem;
            font-size: 1rem;
            display: flex;
            align-items: center;
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: all 0.2s;
            margin: 0.2rem 0.8rem;
            border-radius: 12px;
            gap: 12px;
        }

        .sidebar-nav a:hover {
            background: rgba(255, 255, 255, 0.05);
            color: #fff;
        }

        .sidebar-nav a.active {
            background: var(--primary-gradient);
            color: #fff;
            box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
        }

        .sidebar-nav a i {
            font-size: 1.25rem;
        }

        .sidebar-footer {
            padding: 1.5rem;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
        }

        /* Page Content Styles */
        #content {
            width: 100%;
            min-height: 100vh;
            transition: all 0.3s;
            margin-left: var(--sidebar-width);
        }

        #content.active {
            margin-left: 0;
        }

        .top-navbar {
            padding: 1rem 2rem;
            background: var(--glass-bg);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--glass-border);
            position: sticky;
            top: 0;
            z-index: 999;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .hamburger-btn {
            background: transparent;
            border: none;
            font-size: 1.5rem;
            color: #64748b;
            cursor: pointer;
            padding: 5px;
            border-radius: 8px;
            transition: background 0.2s;
        }

        .hamburger-btn:hover {
            background: rgba(0, 0, 0, 0.05);
        }

        .main-body {
            padding: 2rem;
        }

        .user-profile-badge {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 6px 12px;
            background: #fff;
            border-radius: 100px;
            border: 1px solid #e2e8f0;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.02);
        }

        .user-avatar {
            width: 32px;
            height: 32px;
            background: var(--primary-gradient);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 0.8rem;
        }
    </style>
</head>

<body>
    <div id="wrapper">
        <div class="sidebar-overlay" id="overlay"></div>

        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-brand">
                    <i class="bi bi-wallet2 text-primary"></i>
                    <span>TEDU Wallet</span>
                </div>
                <div class="mt-3 p-3 bg-white bg-opacity-10 rounded-3">
                    <div class="small text-white-50 mb-1">Total Balance</div>
                    <div class="h4 mb-0 fw-bold text-warning">@currentBalance.ToString("N0") <span
                            class="small">TDC</span></div>
                </div>
            </div>

            <div class="sidebar-nav">
                <div class="nav-section-title">Main</div>
                <a asp-controller="Student" asp-action="Dashboard"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")">
                    <i class="bi bi-grid-1x2-fill"></i>
                    <span>Dashboard</span>
                </a>
                <a asp-controller="Student" asp-action="Tasks"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Tasks" ? "active" : "")">
                    <i class="bi bi-check2-circle"></i>
                    <span>Tasks</span>
                </a>
                <a asp-controller="Student" asp-action="Rewards"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Rewards" ? "active" : "")">
                    <i class="bi bi-gift-fill"></i>
                    <span>Rewards</span>
                </a>
                <a asp-controller="Student" asp-action="Wallet"
                    class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Wallet" ? "active" : "")">
                    <i class="bi bi-coin"></i>
                    <span>My Wallet</span>
                </a>
            </div>

            <div class="sidebar-footer">
                <a asp-controller="Student" asp-action="Settings"
                    class="text-decoration-none d-flex align-items-center gap-3 mb-3 @(ViewContext.RouteData.Values["action"]?.ToString() == "Settings" ? "text-primary fw-bold" : "text-white-50")"
                    style="font-size: 0.9rem;">
                    <i class="bi bi-gear-fill"></i>
                    <span>Settings</span>
                </a>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit"
                        class="btn btn-link p-0 text-danger text-decoration-none d-flex align-items-center gap-3"
                        style="font-size: 0.9rem;">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>Logout</span>
                    </button>
                </form>
            </div>
        </nav>

        <!-- Content -->
        <div id="content">
            <nav class="top-navbar">
                <button type="button" id="sidebarCollapse" class="hamburger-btn">
                    <i class="bi bi-list"></i>
                </button>

                <div class="d-flex align-items-center gap-4">
                    <div class="user-profile-badge">
                        <div class="user-avatar">
                            @(fullName[0].ToString().ToUpper())
                        </div>
                        <span class="fw-medium text-dark d-none d-sm-inline" style="font-size: 0.9rem;">@fullName</span>
                    </div>
                </div>
            </nav>

            <div class="main-body">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            $('#sidebarCollapse, #overlay').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
                $('#overlay').toggleClass('active');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>