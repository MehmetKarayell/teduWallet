@using teduWallet.Services
@inject IActivityService ActivityService
@{
    int pendingCount = ActivityService.GetPendingApprovalsCount().Result;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title> Admin Panel - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin-style.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>

<body class="bg-light">
    <div class="d-flex" id="wrapper">
        <div class="bg-dark text-white" id="sidebar-wrapper" style="min-width: 250px; min-height: 100vh;">
            <div class="sidebar-heading p-4 fs-4 border-bottom">
                <span class="text-warning">TEDU</span> Admin Panel
            </div>
            <div class="list-group list-group-flush p-3">
                <a asp-controller="Admin" asp-action="Dashboard"
                    class="list-group-item list-group-item-action bg-dark text-white border-0">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
                <a asp-controller="Admin" asp-action="Users"
                    class="list-group-item list-group-item-action bg-dark text-white border-0">
                    <i class="bi bi-people me-2"></i> User Management
                </a>
                <a asp-controller="Activity" asp-action="ManageActivities"
                    class="list-group-item list-group-item-action bg-dark text-white border-0">
                    <i class="bi bi-list-check me-2"></i> Manage Activities
                </a>
                <a asp-controller="Reward" asp-action="ManageRewards"
                    class="list-group-item list-group-item-action bg-dark text-white border-0">
                    <i class="bi bi-gift me-2"></i> Manage Rewards
                </a>
                <a asp-controller="Admin" asp-action="PendingApprovals"
                    class="list-group-item list-group-item-action bg-dark text-white border-0 d-flex justify-content-between align-items-center">
                    <span><i class="bi bi-check-circle me-2"></i> Activity Approvals</span>
                    @if (pendingCount > 0)
                    {
                        <span class="badge bg-danger rounded-pill">@pendingCount</span>
                    }
                </a>

                <hr />
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-link text-danger text-decoration-none">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </button>
                </form>
            </div>
        </div>

        <div id="page-content-wrapper" class="w-100">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom px-4 py-3">
                <span class="navbar-text fw-bold">Welcome, @User.Identity.Name</span>
            </nav>
            <div class="container-fluid p-4">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>