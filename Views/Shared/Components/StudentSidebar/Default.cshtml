@using System.Security.Claims
@{
  var balance = ViewBag.SidebarBalance as decimal? ?? 0;
  var completedTasks = ViewBag.SidebarCompletedTasks as int? ?? 0;
  var fullName = ViewBag.FullName as string ?? "Student";
}

<div class="sidebar-header">
  <div class="sidebar-brand">
    <i class="bi bi-wallet2 text-primary"></i>
    <span>TEDU Wallet</span>
  </div>
  <div class="mt-3 p-3 bg-white bg-opacity-10 rounded-3">
    <div class="d-flex justify-content-between align-items-center mb-1">
      <div class="small text-white-50">Total Balance</div>
      <div class="badge bg-primary bg-opacity-25 text-primary small">Real-time</div>
    </div>
    <div class="h4 mb-0 fw-bold text-warning">@balance.ToString("N0") <span class="small">TDC</span></div>
  </div>
  <div class="mt-2 p-2 bg-white bg-opacity-5 rounded-3 d-flex align-items-center gap-2">
    <i class="bi bi-check2-circle text-success"></i>
    <div class="small">
      <span class="text-white-50">Tasks:</span>
      <span class="fw-bold text-success">@completedTasks</span>
    </div>
  </div>
</div>
