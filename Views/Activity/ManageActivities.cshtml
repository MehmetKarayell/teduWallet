@model IEnumerable<teduWallet.Models.Activity>
@{
    ViewData["Title"] = "Manage Activities";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Manage Activities</h2>
            <p class="text-muted">View, edit, or delete student activities.</p>
        </div>
        <a asp-action="AddActivity" class="btn btn-warning rounded-pill px-4 fw-bold">
            <i class="bi bi-plus-lg me-2"></i>New Activity
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="px-4 py-3 text-secondary border-0">Title</th>
                        <th class="py-3 text-secondary border-0">Reward</th>
                        <th class="py-3 text-secondary border-0">Max Participants</th>
                        <th class="py-3 text-secondary border-0">Deadline</th>
                        <th class="py-3 text-secondary border-0 text-end px-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                No activities found. <a asp-action="AddActivity">Create one?</a>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-4">
                                    <h6 class="mb-0 fw-bold">@item.Title</h6>
                                    <small class="text-muted">@item.Description</small>
                                </td>
                                <td>
                                    <span class="badge bg-warning bg-opacity-25 text-warning-emphasis rounded-pill px-3">
                                        @item.RewardTokenAmount TDC
                                    </span>
                                </td>
                                <td>
                                    @item.MaxParticipants
                                </td>
                                <td>
                                    @(item.Deadline?.ToString("MMM dd, yyyy") ?? "-")
                                </td>
                                <td class="text-end px-4">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="EditActivity" asp-route-id="@item.ActivityId" 
                                           class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                            Edit
                                        </a>
                                        <button type="button" class="btn btn-outline-danger btn-sm rounded-pill px-3"
                                                data-bs-toggle="modal" data-bs-target="#deleteModal-@item.ActivityId">
                                            Delete
                                        </button>
                                    </div>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal-@item.ActivityId" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content rounded-4 border-0">
                                                <div class="modal-body p-4 text-center">
                                                    <div class="mb-3 text-danger bg-danger bg-opacity-10 p-3 rounded-circle d-inline-block">
                                                        <i class="bi bi-exclamation-triangle-fill fs-3"></i>
                                                    </div>
                                                    <h5 class="fw-bold mb-2">Delete Activity?</h5>
                                                    <p class="text-muted mb-4">
                                                        Are you sure you want to delete "<strong>@item.Title</strong>"? This action cannot be undone.
                                                    </p>
                                                    <div class="d-flex justify-content-center gap-2">
                                                        <button type="button" class="btn btn-light rounded-pill px-4 fw-bold" data-bs-dismiss="modal">Cancel</button>
                                                        <form asp-action="DeleteActivity" asp-route-id="@item.ActivityId" method="post">
                                                            <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
